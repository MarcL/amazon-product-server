{
    "extends": ["airbnb-base", "prettier"],
    "rules": {
        "indent": ["error", 4],
        "object-curly-spacing": ["error", "never"],
        "comma-dangle": ["error", "never"],
        "mocha/no-exclusive-tests": "error"
    },
    "env": {"mocha": true},
    "globals": {
        "expect": true,
        "sinon": true
    },
    "plugins": ["mocha"]
}
